{
  "name": "yappr",
  "type": "module",
  "scripts": {
    "start:py": "python/venv/bin/python python/server.py",
    "openapi:export": "python/venv/bin/python python/export_openapi.py",
    "lint": "eslint .",
    "test:py": "cd python && python -m pytest tests/ -v",
    "test": "bun test",
    "tui": "bun run src/cli/app.tsx",
    "serve": "bun run start:py",
    "speak": "bun run src/cli/index.ts speak",
    "chat": "bun run src/cli/index.ts chat",
    "voices": "bun run src/cli/index.ts voices",
    "dev": "bun --watch src/cli/index.ts",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit"
  },
  "private": true,
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@ianvs/prettier-plugin-sort-imports": "^4.7.1",
    "@types/bun": "latest",
    "@types/react": "^19.2.10",
    "eslint": "^9.39.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "jiti": "^2.6.1",
    "openapi-typescript": "^7.10.1",
    "prettier": "^3.8.1",
    "typescript-eslint": "^8.54.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.3",
    "@tanstack/ai": "^0.3.0",
    "@tanstack/ai-ollama": "^0.3.0",
    "@types/marked-terminal": "^6.1.1",
    "cli-highlight": "^2.1.11",
    "ink": "^6.6.0",
    "ink-spinner": "^5.0.0",
    "ink-text-input": "^6.0.0",
    "marked": "^17.0.1",
    "marked-terminal": "^7.3.0",
    "neverthrow": "^8.2.0",
    "ollama": "^0.6.3",
    "react": "^19.2.4",
    "zod": "^4.3.6"
  }
}
